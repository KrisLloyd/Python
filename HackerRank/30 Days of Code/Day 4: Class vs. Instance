class Person:
    
    int = 0;
    
    def __init__(self,initialAge):
        if initialAge < 0:
            print("Age is not valid, setting age to 0.")
            type(self).age = 0;
        else:
            type(self).age = initialAge;
    def amIOld(self):
        if  type(self).age < 13:
            print("You are young.")
        elif  type(self).age >= 13 and  type(self).age < 18:
            print("You are a teenager.")
        else:
            print("You are old.")
    def yearPasses(self):
        type(self).age += 1;
        t = int(input())
for i in range(0, t):
    age = int(input())         
    p = Person(age)  
    p.amIOld()
    for j in range(0, 3):
        p.yearPasses()       
    p.amIOld()
    print("")
